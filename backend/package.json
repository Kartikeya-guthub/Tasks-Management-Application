    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 2021
    },
    "rules": {
      "no-console": "off",
      "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }]
    },
    "overrides": [
      {
        "files": ["src/__tests__/**/*.js"],
        "env": {
          "jest": true
        }
      }
    ]
  }
}
