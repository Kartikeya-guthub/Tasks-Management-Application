# ─────────────────────────────────────────────
# Application
# ─────────────────────────────────────────────
NODE_ENV=development
PORT=5000
# Logging level: trace | debug | info | warn | error | fatal
LOG_LEVEL=info

# ─────────────────────────────────────────────
# Database (PostgreSQL)
# ─────────────────────────────────────────────
DATABASE_URL=postgresql://your_db_user:your_db_password@localhost:5432/taskmanager

# ─────────────────────────────────────────────
# pgAdmin (optional)
# ─────────────────────────────────────────────
PGADMIN_EMAIL=admin@admin.com
PGADMIN_PASSWORD=your_pgadmin_password
PGADMIN_PORT=5050

# ─────────────────────────────────────────────
# Authentication
# ─────────────────────────────────────────────
JWT_SECRET=replace_with_a_long_random_secret
REFRESH_SECRET=replace_with_a_different_long_random_secret

# ─────────────────────────────────────────────
# Field Encryption (AES-256-GCM)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# ─────────────────────────────────────────────
FIELD_ENC_KEY=replace_with_64_char_hex_string

# ─────────────────────────────────────────────
# CORS
# ─────────────────────────────────────────────
CLIENT_ORIGIN=http://localhost:5173

# ─────────────────────────────────────────────
# Production (set on Render)
# ─────────────────────────────────────────────
# FRONTEND_URL=https://your-app.vercel.app
